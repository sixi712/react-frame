{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@": ["src/*"],
      "@Views/*": ["src/views/*"],
      "@Components/*": ["src/components/*"],
      "@Constants/*": ["src/constants/*"],
      "@Router/*": ["src/router/*"],
      "@Assets/*": ["src/assets/*"],
      "@CSS/*": ["src/styles/*"],
      "@Common/*": ["src/utils/common/*"],
      "@Regular/*": ["src/utils/regExps/*"],
      "@Request/*": ["src/utils/request/apis/*"]
    }
  },
  "include": ["./src/**/*", "src/files.d.ts"]
}
