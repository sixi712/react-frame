{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@Root": ["src/components/root"],
      "@Pages": ["src/pages"],
      "@API": ["src/constants/apis"],
      "@BaseConfig": ["src/constants/baseConfig"],
      "@Components": ["src/components"],
      "@Components/*": ["src/components/*"],
      "@Assets/*": ["src/assets/*"],
      "@CSS/*": ["src/styles/*"],
      "@Common": ["src/utils/common.ts"],
      "@Types": ["src/types/index.ts"],
      "@Store": ["src/components/root/StoreProvider"],
    }
  },
  "include": ["./src/**/*", "src/files.d.ts", "src/env.d.ts"]
}
