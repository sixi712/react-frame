{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@": ["src/*"],
      "@Views/*": ["src/views/*"],
      "@Components/*": ["src/components/*"],
      "@Constants/*": ["src/constants/*"],
      "@Router/*": ["src/router/*"],
      "@Assets/*": ["src/assets/*"],
      "@CSS/*": ["src/styles/*"],
      "@CommonFunc": ["src/utils/common.ts"],
      "@Regular": ["src/utils/regExps.ts"],
      "@Request": ["src/utils/request/apis.ts"]
    }
  },
  "include": ["./src/**/*", "src/files.d.ts"]
}
